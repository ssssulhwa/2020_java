class Ex02{
        public static void main(String[] args){
        boolean result; 	          // 선언
        result = true;		          // 데이터 저장
        System.out.println(result)  ;       // 출력
	
	boolean res= false ;          // 선언과 데이터 저장 한번에
	System.out.println(res);

	// 선언만하고 데이터 저장 안함	
	// boolean res2 ;
	// 데이터 저장 안하고 호출하면 오류 발생
	// System.out.println(res2);
    }
}