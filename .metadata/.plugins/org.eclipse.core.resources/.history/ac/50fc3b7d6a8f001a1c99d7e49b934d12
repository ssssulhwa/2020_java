
public class Ex19 {
	public static void main(String[] args) {
		// 삼항 연산자 예제
		// int k1가 홀수인지 짝수인지 판별하자
		int k1 = 7;

		// int k2가 60이상이면 합격, 아니면 불합격 판별하자
		int k2 = 76;
		String res = true ? "합격" : "불합격";
		System.out.println("결과 : " + res);

		// char k3 = 대문자인지 아닌지 판별하자
		char k3 = 'H';

		// 근무시간이 8시간 까지는 시급 8590 이고
		// 8시간 초과한 시간 부터는 1.5배 지급
		// 현재 근무한 시간이 10시간
		// 얼마를 받아야 하는가?
		
		int 8*8590
		int 2*(8590*1.5
				
	}
}
